<% content_for :page_title do %>
Edit Menu - 
<% end %>
<div class="container">
<div class="page-header">
<h1>Editing Menu</h1>
</div>

<%= render 'form' %>

<div class="clearfix"></div>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, @menu, class: "btn btn-default" %>
</div>
<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete menu...".html_safe, @menu, method: :delete, data: { confirm: "Are you sure you want to delete this menu?" }, class: "btn btn-danger" %>
</div>
</div>
