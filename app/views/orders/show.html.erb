<% content_for :page_title do %>
order Details - 
<% end %>
<div class="container">
<div class="page-header">
<h1>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, orders_path, class: "btn btn-default", title: "Back to orders" %>
&nbsp;
</div>
<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_order_path(@order), class: "btn btn-warning" %>
</div>
order Details
</h1>
</div>

