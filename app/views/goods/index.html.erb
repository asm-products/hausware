<p id="notice"><%= notice %></p>

<% content_for :page_title do %>
Goods - 
<% end %>
<div class="container">
<div class="page-header">
<h1>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, "/", class: "btn btn-default", title: "Back" %>
&nbsp;
</div>

<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-plus-sign\" aria-hidden=\"true\"></span> New Good".html_safe, [:new, :good], class: "btn btn-success" %>
</div>
Listing Goods
</h1>
</div>

<table class="table table-striped table-hover tablesorter" id="Goods-table">


  <thead>
<tr>
    
      <th><span>Menu</span></th>
      <th><span>Name</span></th>
      <th><span>Permalink</span></th>
      <th><span>Price in cents</span></th>
      <th><span>Picurl</span></th>
      <th><span>Description</span></th>
      
    </tr>
  </thead>

  <tbody>
    <% unless @goods.any? %>
<tr id="empty-table">
<td class="bg-warning" colspan="2">No goods created yet.</td>
</tr>
<% end %>
<% @goods.each do |good| %>
<tr class="linked-row" data-href="<%= good_path(good) %>">
      
        <td><%= link_to good.menu, good %></td>
        <td><%= link_to good.name, good %></td>
        <td><%= link_to good.permalink, good %></td>
        <td><%= link_to good.price_in_cents, good %></td>
        <td><%= link_to good.picurl, good %></td>
        <td><%= link_to good.description, good %></td>
        
        
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>




