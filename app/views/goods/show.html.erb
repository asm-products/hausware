<% content_for :page_title do %>
good Details - 
<% end %>
<div class="container">
<div class="page-header">
<h1>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, goods_path, class: "btn btn-default", title: "Back to goods" %>
&nbsp;
</div>
<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_good_path(@good), class: "btn btn-warning" %>
</div>
good Details
</h1>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Menu</label>
  <div class="col-sm-9"><%= @good.menu %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Name</label>
  <div class="col-sm-9"><%= @good.name %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Permalink</label>
  <div class="col-sm-9"><%= @good.permalink %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Price in cents</label>
  <div class="col-sm-9"><%= @good.price_in_cents %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Picurl</label>
  <div class="col-sm-9"><%= @good.picurl %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Description</label>
  <div class="col-sm-9"><%= @good.description %></div>
</div>

</div>

